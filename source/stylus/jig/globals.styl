$jig---config ?= null
if !($jig---config is a 'object')
	if jig---config is defined
		$jig---config = jig---config
	else if $JIG_CONFIG is defined
		$jig---config = $JIG_CONFIG
	else if JIG_CONFIG is defined
		$jig---config = JIG_CONFIG

if !($jig---config is a 'object')
	error('jig:globals | jig config is undefined or not a hash')



$jig---breakpoint-config ?= $jig---config.breakpoints
$jig---breakpoint-config ?= {
	'small' : 0,
	'medium' : 768px,
	'large' : 1280px
}



$jig---grid-config ?= $jig---config.grid
$jig---grid-config ?= {
	'columns' : 12,
	'gutters' : {
		'horizontal' : {
			'small' : 20px,
			'medium' : 30px,
			'large' : 40px
		},
		'vertical' : 20px
	}
}



$jig---spacing-config ?= $jig---config.spacing
$jig---spacing-config ?= {
	'sm' : {
		'small' : 1rem,
		'medium' : 2rem,
		'large' : 3rem
	}
	'md' : {
		'small' : 2rem,
		'medium' : 3rem,
		'large' : 5rem
	},
	'l' : {
		'small' : 3rem,
		'medium' : 5rem,
		'large' : 8rem
	}
}



$jig---content-config ?= $jig---config.content
$jig---content-config ?= {
	'padding' : {
		'small' : 20px,
		'medium' : 40px,
		'large' : 80px
	},
	'max-width' : 1600px,
	'base-font-size' : 16px
}



$jig---base-font-size ?= $jig---content-config.base-font-size
$jig---base-font-size ?= 16px



$jig---print-breakpoint ?= $jig---config.print-breakpoint
$jig---print-breakpoint ?= 'large'
